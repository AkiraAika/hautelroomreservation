<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityBooking">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Choose Date"
        android:textColor="#000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <androidx.cardview.widget.CardView
            android:layout_width="390dp"
            android:layout_height="60dp"
            android:onClick="showPopupCID"
            android:background="@drawable/bg_shape"
            app:cardBackgroundColor="#F84886"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:id="@+id/tvCID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check-in Date"
                android:textColor="#000"

                android:textSize="24sp"
                android:layout_marginVertical="15dp"
                android:layout_marginLeft="15dp"/>

            <ImageView
                android:id="@+id/popupCID"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_date_range_black_24dp"
                android:layout_marginLeft="335dp"
                android:layout_marginVertical="5dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp">

        <androidx.cardview.widget.CardView
            android:layout_width="390dp"
            android:layout_height="60dp"
            android:onClick="showPopupCOD"
            android:background="@drawable/bg_shape"
            app:cardBackgroundColor="#F84886"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:id="@+id/tvCOD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check-out Date"
                android:textColor="#000"
                android:textSize="24sp"
                android:layout_marginVertical="15dp"
                android:layout_marginLeft="15dp"/>

            <ImageView
                android:id="@+id/popupCOD"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_date_range_black_24dp"
                android:layout_marginLeft="335dp"
                android:layout_marginVertical="5dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_marginTop="175dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room type"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginTop="185dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="315dp"
        android:layout_marginTop="190dp"
        android:onClick="showPopup"
        android:textColor="#087FE6"
        android:text="Room Info?"
        android:textStyle="italic"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="175dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/bg_shape">

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/single" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="7dp"
                    android:text="Single Room"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="45dp"
                    android:text="RM 125"
                    android:textColor="#000"
                    android:textSize="24sp" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/num1"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="140dp"
                    android:background="@drawable/bg_popup"
                    app:initialNumber="0"
                    app:finalNumber="3"
                    app:textColor="#FFFFFF"
                    app:textSize="10sp"></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="145dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/bg_shape">

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/twin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="7dp"
                    android:text="Twin Room"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="40dp"
                    android:text="RM 132"
                    android:textColor="#000"
                    android:textSize="24sp" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/num2"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="140dp"
                    android:background="@drawable/bg_popup"
                    app:initialNumber="0"
                    app:finalNumber="3"
                    app:textColor="#FFFFFF"
                    app:textSize="10sp"></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="245dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/bg_shape">

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/family_triple" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="7dp"
                    android:text="Family Triple"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="40dp"
                    android:text="RM 150"
                    android:textColor="#000"
                    android:textSize="24sp" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/num3"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="140dp"
                    android:background="@drawable/bg_popup"
                    app:initialNumber="0"
                    app:finalNumber="3"
                    app:textColor="#FFFFFF"
                    app:textSize="10sp"></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="345dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/bg_shape">

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/family_quad" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="7dp"
                    android:text="Family Suite"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="40dp"
                    android:text="RM 180"
                    android:textColor="#000"
                    android:textSize="24sp" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/num4"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="140dp"
                    android:background="@drawable/bg_popup"
                    app:initialNumber="0"
                    app:finalNumber="3"
                    app:textColor="#FFFFFF"
                    app:textSize="10sp"></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="#000"
            android:text="Your Booking Number: "
            android:textSize="22sp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/randomNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#"
            android:textSize="22sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="240dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="40dp"
            android:text="*All price are charged per night"
            android:textColor="#D32121"
            android:textSize="18sp"
            android:textStyle="italic" />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnConfirm"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/ic_arrow_forward_black_24dp"/>
</RelativeLayout>